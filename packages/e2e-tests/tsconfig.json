{
  "compilerOptions": {
    "noEmit": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "ES2022",
    "target": "ES2022",
    "rootDirs": [".", "../shared"],
    "allowJs": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "strict": true
  },
  "include": ["./**/*.ts", "./**/*.js"]
}
